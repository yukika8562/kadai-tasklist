<% if logged_in? %>
  <p>ログイン完了ユーザー: <%= current_user.userid %></p>
  <div>
    <ul>
      <li><%= link_to 'ログアウト', logout_path %></li>
    </ul>
  </div>
<% else %>
<h1>タスクリスト</h1>

<div>
  <ul>
    <li><%= link_to 'ログイン', login_path %></li>
    <li><%= link_to 'ユーザー登録', signup_path %></li>
  </ul>
</div>
<% end %>